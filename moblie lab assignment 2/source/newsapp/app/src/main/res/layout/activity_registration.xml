<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sample.labassignment1.RegistrationActivity"
    android:background="@drawable/background">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="35dp"
        android:id="@+id/TextEdit_FirstName"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:hint="First Name"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:text="First Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:id="@+id/textView3"
        android:layout_above="@+id/TextEdit_LastName"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:text="Last Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/TextEdit_LastName"
        android:layout_alignStart="@+id/textView3"
        android:textColor="@color/colorWhite"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_below="@+id/TextEdit_LastName"
        android:layout_alignStart="@+id/TextEdit_LastName"
        android:id="@+id/TextEdit_EmailId"
        android:hint="Email Id"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/TextEdit_LastName"
        android:hint="Last Name"
        android:layout_below="@+id/TextEdit_FirstName"
        android:layout_alignStart="@+id/TextEdit_FirstName"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:text="User Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:text="Email Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/TextEdit_EmailId"
        android:layout_alignStart="@+id/textView4"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_alignBottom="@+id/TextEdit_Password"
        android:layout_alignStart="@+id/textView6"
        android:textColor="@color/colorWhite"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/TextEdit_UserName"
        android:hint="User Name"
        android:layout_below="@+id/TextEdit_EmailId"
        android:layout_alignStart="@+id/TextEdit_EmailId"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/TextEdit_Password"
        android:layout_below="@+id/TextEdit_UserName"
        android:layout_alignStart="@+id/TextEdit_UserName"
        android:hint="Password"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:text="DOB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="24dp"
        android:id="@+id/textView8"
        android:textColor="@color/colorWhite"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/TextEdit_DOB"
        android:hint="DOB"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignStart="@+id/TextEdit_Password"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:text="Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="23dp"
        android:id="@+id/textView9"
        android:textColor="@color/colorWhite"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:layout_below="@+id/TextEdit_DOB"
        android:layout_alignStart="@+id/TextEdit_DOB"
        android:id="@+id/TextEdit_Address"
        android:hint="Postal Address"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"/>

    <Button
        android:text="Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextEdit_Address"
        android:layout_marginTop="32dp"
        android:id="@+id/btn_Register"
        android:textColor="@color/colorWhite"
        android:background="@drawable/com_facebook_tooltip_black_background"
        android:onClick="SignUp"
        />

    <TextView
        android:text="Registration Page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/textView23"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/colorWhite"
        android:textAlignment="center"/>
</RelativeLayout>
